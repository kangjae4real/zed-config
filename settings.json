// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
    "telemetry": {
        "diagnostics": false,
        "metrics": false
    },
    "base_keymap": "JetBrains",
    "theme": "Solarized Dark",
    "buffer_font_family": "JetBrains Mono",
    "buffer_font_size": 14,
    "autosave": "on_focus_change",
    "terminal": {
        "font_family": "JetBrains Mono",
        "font_size": 14
    },
    "language_overrides": {
        "JavaScript": {
            "tab_size": 2,
            // NOTE: Install 'prettier' package on global
            "format_on_save": {
                "external": {
                    "command": "prettier",
                    "arguments": [
                        "--stdin-filepath",
                        "{buffer_path}"
                    ]
                }
            }
        },
        "TypeScript": {
            "tab_size": 2,
            // NOTE: Install 'prettier' package on global
            "format_on_save": {
                "external": {
                    "command": "prettier",
                    "arguments": [
                        "--stdin-filepath",
                        "{buffer_path}"
                    ]
                }
            }
        },
        "TSX": {
            "tab_size": 2,
            // NOTE: Install 'prettier' package on global
            "format_on_save": {
                "external": {
                    "command": "prettier",
                    "arguments": [
                        "--stdin-filepath",
                        "{buffer_path}"
                    ]
                }
            }
        }
    }
}
